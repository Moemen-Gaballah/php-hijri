{
    "name": "pharaonic/php-hijri",
    "description": "PHP - Hijri DateTime (Islamic).",
    "keywords": [
        "hijri",
        "islamic",
        "php hijri",
        "php islamic"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Moamen Eltouny",
            "email": "support@raggitech.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "nesbot/carbon": "^^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Pharaonic\\Hijri\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pharaonic\\Hijri\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
